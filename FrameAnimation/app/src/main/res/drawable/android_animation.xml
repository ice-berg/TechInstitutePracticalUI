<?xml version="1.0" encoding="utf-8"?>
<!-- android:oneshotは一度きりがどうかを設定する。繰り返しアニメーションさせたいのでfalseを設定している -->
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
				android:oneshot="false">
	<!-- 各画像を300ms単位で順番に表示する -->
	<item
		android:drawable="@drawable/droid1"
		android:duration="300"/>
	<item
		android:drawable="@drawable/droid2"
		android:duration="300"/>
	<item
		android:drawable="@drawable/droid3"
		android:duration="300"/>
	<item
		android:drawable="@drawable/droid4"
		android:duration="300"/>
	<item
		android:drawable="@drawable/droid5"
		android:duration="300"/>
</animation-list>